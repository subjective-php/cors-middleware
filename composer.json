{
    "name": "subjective-php/cors-middleware",
    "description": "Middleware to assist with CORS implementation",
    "license": "MIT",
    "require": {
        "php": "^7.0||^8.0",
        "fig/http-message-util": "^1.1",
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "laminas/laminas-diactoros": "^1.8||^2.0",
        "php-coveralls/php-coveralls": "^2.5",
        "phpunit/phpunit": ">=6.1",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "config" : {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "SubjectivePHP\\Middleware\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SubjectivePHPTest\\Middleware\\": "tests"
        }
    },
    "scripts": {
        "lint": "vendor/bin/phpcs",
        "test": "vendor/bin/phpunit"
    }
}
